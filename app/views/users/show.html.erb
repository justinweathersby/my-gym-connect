<p>
  <strong>User Email:</strong>
  <%= @user.email %>
</p>
<p>
  <%= @user.created_at.strftime("Member Since: %m/%d/%Y") %>
</p>
<p>
  <strong>Gym Assosiated To:</strong>
  <%= @user.gym.name if @user.gym_id.present? %>
</p>
<% if @user.image?%>
  <br />
  <%= image_tag @user.image.url(:thumb) %>
  <br />
<% else %>
  <p>
    <strong>NO PHOTO UPLOADED</strong>
  </p>
<% end %>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>
<p>
  <strong>Hours in Gym Array:</strong><br />
  <% @user.hours_in_gym.each do |h| %>
    <%= calc_datetime_from_hours(h.to_f) %>
    <br />
  <% end%>
</p>
<p>
  <strong>Workout Level:</strong>
  <%= @user.workout_level%>
</p>

<% if signed_in? and current_user == @user%>
  <%= link_to "Edit Profile", edit_user_registration_path %>
<% end %>

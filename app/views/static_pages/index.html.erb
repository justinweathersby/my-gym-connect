<header>
    <div class="container">
        <div class="row">
            <div class="col-sm-7">
                <div class="header-content">
                    <div class="header-content-inner">
                        <h1>My Gym Connect is an extension of your Gym. Allowing Gym Members to connect with a Fitness Partner.</h1>
                        <%= link_to "Gym Owners Sign up now!", new_user_registration_path, class: "btn btn-outline btn-xl"  %>
                    </div>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="device-container">
                    <div class="device-mockup iphone6_plus portrait white">
                        <div class="device">
                            <div class="screen">
                                <%= image_tag("demo-screen-connect.jpg", class: "img-responsive") %>
                            </div>
                            <div class="button">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="download" class="download bg-primary text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h2 class="section-heading">Gym Members discover what all the buzz is about!</h2>
                <p>Our app is available on any mobile device! Download now to get started!</p>
                <div class="badges">
                    <a class="badge-link" href="#"><%= image_tag("google-play-badge.svg")%></a>
                    <a class="badge-link" href="#"><%= image_tag("app-store-badge.svg")%></a>
                </div>
            </div>
        </div>
    </div>
</section>

  <section id="features" class="features">
      <div class="container">
          <div class="row">
              <div class="col-lg-12 text-center">
                  <div class="section-heading">
                      <h2>Unlimited Features, Unlimited Fun</h2>
                      <p class="text-muted">Check out what you can do with My Gym Connect!</p>
                      <hr>
                  </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-4">
                  <div class="device-container">
                      <div class="device-mockup iphone6_plus portrait white">
                          <div class="device">
                              <div class="screen">
                                  <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->

                                  <!-- <%= image_tag("demo-screen-1.jpg", class: "img-responsive") %> -->
                                  <%= image_tag("demo-screen-connect.jpg", class: "img-responsive") %>

                              <div class="button">
                                  <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
              </div>
              <div class="col-md-8">
                  <div class="container-fluid">
                      <div class="row">
                          <div class="col-md-6">
                              <div class="feature-item">
                                  <i class="icon-screen-smartphone text-primary"></i>
                                  <h3>A New Way to Work-Out</h3>
                                  <p class="text-muted">Easily locate and connect with your gym members based on work-out level, time, and gender!</p>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="feature-item">
                                  <i class="icon-camera text-primary"></i>
                                  <h3>Flexible Use</h3>
                                  <p class="text-muted">Easily create a unique profile and upload photos!</p>
                              </div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-6">
                              <div class="feature-item">
                                  <i class="icon-present text-primary"></i>
                                  <h3>Free to Use</h3>
                                  <p class="text-muted">Once your Gym joins My Gym Connect members are free to use!</p>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="feature-item">
                                  <i class="icon-lock-open text-primary"></i>
                                  <h3>Unlock your Potential</h3>
                                  <p class="text-muted">Connecting with a work-out partner will help you achieve your goals!</p>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>

  <section class="cta">
      <div class="cta-content">
          <div class="container">
              <h2>Stop waiting.<br>Start Connecting Your Gym Members.</h2>
              <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-outline btn-xl"  %>
          </div>
      </div>
      <div class="overlay"></div>
  </section>

  <section id="contact" class="contact bg-primary">
      <div class="container">
          <h2>We <i class="fa fa-heart"></i> new friends!</h2>
          <ul class="list-inline list-social">
              <li class="social-twitter">
                  <a href="https://twitter.com/gym_connect"><i class="fa fa-twitter"></i></a>
              </li>
              <li class="social-facebook">
                  <a href="https://www.facebook.com/mygymconnect/"><i class="fa fa-facebook"></i></a>
              </li>
          </ul>
      </div>
  </section>

  <footer>
      <div class="container">
          <p>&copy; 2017 My Gym Connect. All Rights Reserved.</p>
          <ul class="list-inline">
              <li>
                <%= link_to "Terms", "https://s3.amazonaws.com/my-gym-connect-staging/pdfs/Terms-and-Conditions.pdf", target: "_blank" %>
              </li>
          </ul>
      </div>
  </footer>
